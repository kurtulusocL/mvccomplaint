@using PagedList
@using PagedList.Mvc
@model IPagedList<Complain.Data.Identity.ApplicationUser>
@{
    ViewBag.Title = "Helper Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title ||
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th class="hidden-phone"> Adı-Soyadı</th>
                                    <th><i class="icon-bookmark"></i> Kullanıcı Adı</th>
                                    <th><i class="icon-bookmark"></i> Mail Adresi</th>
                                    <th>İşlemler</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="hidden-phone">@item.NameLastname</td>
                                        <td>@item.UserName</td>
                                        <td>@item.Email</td>
                                        <td>
                                            <a href="~/Account/ChangePassword/@item.Id"><button class="btn btn-success btn-xs"><i class="icon-ok">Şifreyi Değiştir</i></button></a>
                                            <a href="~/Admin/Delete/@item.Id"><button class="btn btn-danger btn-xs"><i class="icon-trash ">Admini Sil</i></button></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
            <div class="pagination" align="center">
                <div class="pagination-large">
                    @Html.PagedListPager(Model, Page => Url.Action("HelperList", new { Page }), PagedListRenderOptions.ClassicPlusFirstAndLast)
                </div>
            </div>
        </section>
    </section>
</section>
