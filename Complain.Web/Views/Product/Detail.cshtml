@model Complain.Entities.Entities.Product
@{
    ViewBag.Title = "Firma - Ürün Şikayet Detayı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="site-hero site-sm-hero overlay" data-stellar-background-ratio="0.5">
    <img src="~/img/comp.jpg" style="max-height:550px;max-width:720px;min-height:550px;min-width:720px" />
</section>
<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="site-section bg-light">
                <div class="container-fluid block-11 element-animate">
                    <div class="nonloop-block-11 owl-carousel">
                        <div class="item">
                            <div class="block-19">
                                @Html.Action("ComplainDetailPhoto", "Home", new { id = Model.Id })
                            </div>
                            <div class="block-19">
                                @Html.Action("ComplainDetailPhotoTwo", "Home", new { id = Model.Id })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="site-section bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-lg-8 order-md-2 pl-lg-5">
                    <div class="row">
                        <div class="col-md-12 col-lg-12 mb-5">
                            <p class="lead">@Model.Title</p>
                            <p>@Model.Subject</p>
                            <blockquote><p>@Model.CompanyName | @Model.ProductName</p></blockquote>
                            <p>@Model.Detail</p>
                            <blockquote><p>@Model.ComplainOwner.NameSurname | @Model.ComplainOwner.Province</p></blockquote>
                            <div class="pt-5">
                                <p>Kategorisi: <a href="~/Category/ComplainCategory/@Model.Id">@Model.Category.Name</a>, Ülkesi: <a href="~/Country/ComplainCountry/@Model.Id">@Model.Country.Name</a></p>
                                <blockquote>Şİkayet Tarihi: <p>@Model.CreatedTime.ToShortDateString()</p></blockquote>
                            </div>
                            <div class="pt-5">
                                <h3 class="mb-5">0 @*@Model.Comments.Count()*@ yorum</h3>
                                <ul class="comment-list">
                                    @Html.Action("CommentProduct", "Comment", new { id = Model.Id })
                                </ul>
                                <div class="comment-form-wrap pt-5">
                                    <h3 class="mb-5">Siz de bir yorum yapın</h3>
                                    @Html.Action("_ProductComment", "Product")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4 order-md-1">
                    <div class="block-24 mb-5">
                        <h3 class="heading">Kategoriler</h3>
                        <ul>
                            @Html.Action("GetCategoryForComplain", "Home")
                        </ul>
                    </div>
                    <div class="block-25 mb-5">
                        <div class="heading">Biraz Reklam</div>
                        <ul>
                            @Html.Action("AdsForComplainCategory", "Home")
                        </ul>
                    </div>
                    <div class="block-26">
                        <h3 class="heading">Ülkeler</h3>
                        <ul>
                            @Html.Action("GetCountryForComplain", "Home")
                        </ul>
                    </div>
                    <div class="block-26">
                        <h3 class="heading">Son Şikayetçiler</h3>
                        <ul>
                            @Html.Action("LastComplainPeople", "Home")
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="site-section bg-light">
        <div class="container">
            <div class="row justify-content-center mb-5 element-animate">
                <div class="col-md-7 text-left section-heading">
                    <h2 class="text-primary heading">Diğerleri</h2>
                    <p>Son Eklenen Şikayetler</p>
                </div>
            </div>
        </div>
        <div class="container-fluid block-11 element-animate">
            <div class="nonloop-block-11 owl-carousel">
                @Html.Action("LastComplainThings", "Home")
            </div>
        </div>
    </div>
    <div class="py-5 block-22">
        <div class="container">
            @Html.Action("VideoAdsComplainDetail", "Home")
        </div>
    </div>
</div>


