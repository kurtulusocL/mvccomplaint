@model Complain.Entities.Entities.Product
@{
    ViewBag.Title = "Ürün Detay Bilgileri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title  || <a href="~/Product/yonas" class="btn btn-primary">Admin Şikayet Sayfasına Dön</a> || <a href="~/Product/DeleteProductDetail/@Model.Id" class="btn btn-danger">Şikayet Detay Bilgilerini Sil</a>
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th><i class="icon-bullhorn"></i>Şikayet Detayı</th>
                                    <th class="hidden-phone">Ürünün Markası</th>
                                    <th><i class="icon-bookmark"></i>Kullanıldığı Süre (ay)</th>
                                    <th><i class="icon-bookmark"></i>Fiyatı </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.Detail</td>
                                    <td>@Model.ProductDetail.Brand</td>
                                    <td>@Model.ProductDetail.UsedTime</td>
                                    <td>@Model.ProductDetail.Price.ToString()</td>
                                </tr>
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>
