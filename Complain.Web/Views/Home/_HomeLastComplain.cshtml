@model IEnumerable<Complain.Entities.Entities.Product>
@{
    Layout = null;
}

@foreach (var item in Model)
{
    <div class="item">
        <div class="block-19">
            @Html.Action("HomeLastComplainPhoto", "Home", new { id = item.Id })
            <div class="text">
                <h2 class="heading"><a href="~/Product/Detail/@item.Id">@item.CompanyName</a></h2>
                <p class="mb-4">@item.Subject</p>
                <div class="meta d-flex align-items-center">
                    <div class="number">
                        <span>@item.CreatedTime.ToShortDateString()</span>
                        <span>@item.Category.Name</span>
                        <span>@item.Country.Name</span>
                    </div>
                    <div class="price text-right"><a href="~/Product/Detail/@item.Id"><span>Detaya Bak</span></a></div>
                </div>
            </div>
        </div>
    </div>
}


