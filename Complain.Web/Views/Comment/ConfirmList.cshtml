@using PagedList
@using PagedList.Mvc
@model IPagedList<Complain.Entities.Entities.Comment>
@{
    ViewBag.Title = "Onay Bekleyenler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title || <a href="~/Comment/yonas" class="btn btn-primary">Admin Yorum Sayfasına Dön</a>
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th><i class="icon-bullhorn"></i> Adı-Soyadı</th>
                                    <th><i class="icon-sign"></i>Yorum Konusu</th>
                                    <th><i class="icon-sign"></i> Yorum</th>
                                    <th><i class="icon-time"></i> Eklenme Tarihi</th>
                                    <th>İşlemler</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.NameSurname</td>
                                        <td>@item.Subject</td>
                                        <td>@item.Text</td>
                                        <td>@item.CreatedTime.ToShortDateString()</td>
                                        <td>
                                            <a href="~/Comment/ConfirmList/@item.Id"><button class="btn btn-success btn-xs"><i class="icon-pencil">Onay Ver</i></button></a>
                                            <a href="~/Comment/Delete/@item.Id"><button class="btn btn-danger btn-xs"><i class="icon-trash ">Sil</i></button></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
            <div class="pagination" align="center">
                <div class="pagination-large">
                    @Html.PagedListPager(Model, Page => Url.Action("ConfirmList", new { Page }), PagedListRenderOptions.ClassicPlusFirstAndLast)
                </div>
            </div>
        </section>
    </section>
</section>
