@model Complain.Entities.Entities.Comment
@{
    ViewBag.Title = "Yorum Detayı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title  || <a href="~/Comment/yonas" class="btn btn-primary">Admin Yorum Sayfasına Dön</a> || <a href="~/Comment/Delete/@Model.Id" class="btn btn-danger">Yorumu Sil</a>
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th><i class="icon-bullhorn"></i>Mail Adresi</th>
                                    <th class="hidden-phone"><i class="icon-question-sign"></i>Yorum Konusu</th>
                                    <th><i class="icon-bookmark"></i>Yorum Metni </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.MailAddress</td>
                                    <td>@Model.Subject</td>
                                    <td>@Model.Text</td>
                                </tr>
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>