@model Complain.Entities.Entities.OfferCompany
@{
    ViewBag.Title = "Önerilen Firma Detayı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title  || <a href="~/OfferCompany/yonas" class="btn btn-primary">Firma Önerileri Admin Sayfasına Dön</a> || <a href="~/OfferCompany/OwnerDelete/@Model.Id" class="btn btn-danger">Önerilen Firma Bilgilerini Sil</a>
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th><i class="icon-bullhorn"></i>Ekleyen Adı-Soyadı</th>
                                    <th class="hidden-phone"><i class="icon-question-sign"></i>Ekleyen Mail Adresi</th>
                                    <th><i class="icon-bullhorn"></i>Ekleyen Nickname</th>
                                    <th><i class="icon-bullhorn"></i>Gitme Zamanı</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.OfferOwner.NameSurname</td>
                                    <td>@Model.OfferOwner.MailAddress</td>
                                    <td>@Model.OfferOwner.NickName</td>
                                    <td>@Model.OfferOwner.GoTime</td>
                                </tr>
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>
