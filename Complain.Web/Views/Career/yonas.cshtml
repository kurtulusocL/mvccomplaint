@using PagedList
@using PagedList.Mvc
@model IPagedList<Complain.Entities.Entities.Career>
@{
    ViewBag.Title = "Gelen Özgeçmişler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title ||
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th width="80"><i class="icon-bullhorn"></i> Özgeçmiş</th>
                                    <th class="hidden-phone"><i class="icon-question-sign"></i> Adı-Soyadı</th>
                                    <th><i class="icon-bookmark"></i> Üniversite Adı</th>
                                    <th><i class="icon-bookmark"></i>Bölüm Adı</th>
                                    <th><i class="icon-bookmark"></i> Bilinen Yabancı Diller</th>
                                    <th><i class="icon-time"></i> Eklenme Tarihi</th>
                                    <th>İşlemler</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td width="80"><img src="~/cv/@item.Folder" class="img-responsive" /></td>
                                        <td class="hidden-phone">@item.NameSurname</td>
                                        <td>@item.UniversityName</td>
                                        <td>@item.DepartmanName</td>
                                        <td>@item.KnowingLenguage</td>
                                        <td>@item.CreatedTime.ToShortDateString()</td>
                                        <td>
                                            <a href="~/Career/DetailCareer/@item.Id"><button class="btn btn-primary btn-xs"><i class="icon-pencil">Detay</i></button></a>
                                            <a href="~/Career/ContactInfo/@item.Id"><button class="btn btn-success btn-xs"><i class="icon-pencil">İletişim</i></button></a>
                                            <a href="~/Career/DeleteCareer/@item.Id"><button class="btn btn-danger btn-xs"><i class="icon-trash ">Sil</i></button></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
            <div class="pagination" align="center">
                <div class="pagination-large">
                    @Html.PagedListPager(Model, Page => Url.Action("yonas", new { Page }), PagedListRenderOptions.ClassicPlusFirstAndLast)
                </div>
            </div>
        </section>
    </section>
</section>
