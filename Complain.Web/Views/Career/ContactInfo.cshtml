@model Complain.Entities.Entities.Career
@{
    ViewBag.Title = "Aday İletişim Bilgileri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title  || <a href="~/Career/yonas" class="btn btn-primary">Özgeçmiş Admin Sayfasına Dön</a> || <a href="~/Career/DeleteCareer/@Model.Id" class="btn btn-danger">Gönderilen Özgeçmişi Sil</a>
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th><i class="icon-bookmark"></i> Eyalet | Şehir</th>
                                    <th><i class="icon-bookmark"></i>Ülke</th>
                                    <th><i class="icon-bookmark"></i> Telefon No</th>
                                    <th><i class="icon-bookmark"></i> Mail Adresi</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.Province | @Model.City</td>
                                    <td>@Model.Country</td>
                                    <td>@Model.PhoneNumber</td>
                                    <td>@Model.MailAddress</td>
                                </tr>
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>
