@model Complain.Entities.Entities.Career
@{
    ViewBag.Title = "Özgeçmiş Detay Bilgileri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title  || <a href="~/Career/yonas" class="btn btn-primary">Özgeçmiş Admin Sayfasına Dön</a> || <a href="~/Career/ContactInfo/@Model.Id" class="btn btn-danger">Kişiyle İletişime Geç</a> || <a href="~/Career/DeleteCareer/@Model.Id" class="btn btn-danger">Gönderilen Özgeçmişi Sil</a>
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th><i class="icon-bullhorn"></i>Kimlik No:</th>
                                    <th class="hidden-phone"><i class="icon-question-sign"></i> Pasaport No:</th>
                                    <th><i class="icon-bookmark"></i> Doğum Tarihi</th>
                                    <th><i class="icon-bookmark"></i>Uyruk</th>
                                    <th><i class="icon-bookmark"></i> Cinsiyet</th>
                                    <th><i class="icon-bookmark"></i>Niyet Mektubu</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.IdentityNo</td>
                                    <td>@Model.PassportNo</td>
                                    <td>@Model.Birthdate.ToShortDateString()</td>
                                    <td>@Model.Nationality</td>
                                    <td>@Model.Gender</td>
                                    <td>@Model.ShortIntroduction</td>
                                </tr>
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>
