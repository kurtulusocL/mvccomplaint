@model IEnumerable<Complain.Entities.Entities.SocialMedia>
@{
    ViewBag.Title = "Sosyal Medya Hesaplarımız";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title  || <a href="~/SocialMedia/Create" class="btn btn-primary">Yeni Sosyal Medya Bilgileri Ekle</a>
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th><i class="icon-bullhorn"></i>Facebook</th>
                                    <th class="hidden-phone">Twitter</th>
                                    <th><i class="icon-bookmark"></i>Instagram </th>
                                    <th><i class="icon-bookmark"></i>LinkedIn </th>
                                    <th><i class="icon-bookmark"></i>Eklenme Tarihi </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Facebook</td>
                                        <td>@item.Twitter</td>
                                        <td>@item.Instagram</td>
                                        <td>@item.LinkedIn</td>
                                        <td>@item.CreatedTime.ToShortDateString()</td>
                                        <td>
                                            <a href="~/About/Edit/@item.Id"><button class="btn btn-success btn-xs"><i class="icon-pencil">Güncelle</i></button></a>
                                            <a href="~/About/Delete/@item.Id"><button class="btn btn-danger btn-xs"><i class="icon-trash ">Sil</i></button></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>
