@model Complain.Entities.Entities.SocialMedia
@{
    ViewBag.Title = "Sosyal Medya Bilgilerini Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title
                        </header>
                        <div class="panel-body">
                            <div class="form">
                                <form class="cmxform form-horizontal tasi-form" id="signupForm" method="post" action="">
                                    @Html.AntiForgeryToken()
                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-2">Facebook: *</label>
                                        <div class="col-lg-10">
                                            <input class=" form-control" id="firstname" name="Facebook" type="url" required />
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="password" class="control-label col-lg-2">Twitter: *</label>
                                        <div class="col-lg-10">
                                            <input class="form-control " id="password" name="Twitter" type="url" required />
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="password" class="control-label col-lg-2">Instagram: *</label>
                                        <div class="col-lg-10">
                                            <input class="form-control " id="password" name="Instagram" type="url" required />
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="password" class="control-label col-lg-2">LinkedIn: *</label>
                                        <div class="col-lg-10">
                                            <input class="form-control " id="password" name="LinkedIn" type="url" required />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-offset-2 col-lg-10">
                                            <button class="btn btn-danger" type="submit">Bilgileri Ekle</button>
                                            <a href="~/SocialMedya/yonas"><button class="btn btn-default" type="button">İptal Et</button></a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>
