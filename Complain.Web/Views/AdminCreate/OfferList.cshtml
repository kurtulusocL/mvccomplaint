@using PagedList
@using PagedList.Mvc
@model IPagedList<Complain.Entities.Entities.OfferCompany>
@{
    ViewBag.Title = "Önerilen Ürün Ya da Firmalar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title || <a href="~/AdminCreate/Create/" class="btn btn-primary">Yeni Öneri Ekle</a>
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th width="80"><i class="icon-bullhorn"></i> Resim</th>
                                    <th class="hidden-phone"><i class="icon-question-sign"></i>Firma Adı</th>
                                    <th class="hidden-phone"><i class="icon-question-sign"></i>Neden</th>
                                    <th><i class="icon-time"></i> Eklenme Tarihi</th>
                                    <th>İşlemler</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td width="80"><img src="~/img/offer/@item.Photo" class="img-responsive" /></td>
                                        <td class="hidden-phone">@item.CompanyName</td>
                                        <td class="hidden-phone">@item.Subject</td>
                                        <td>@item.CreatedTime.ToShortDateString()</td>
                                        <td>
                                            <a href="~/OfferCompany/OfferDetail/@item.Id"><button class="btn btn-primary btn-xs"><i class="icon-pencil">Detay</i></button></a>
                                            <a href="~/AdminCreate/Edit/@item.Id"><button class="btn btn-success btn-xs"><i class="icon-pencil">Güncelle</i></button></a>
                                            <a href="~/OfferCompany/Delete/@item.Id"><button class="btn btn-danger btn-xs"><i class="icon-trash ">Sil</i></button></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </section>
                    <div class="page-header">
                        <div class="pagination-centered">
                            @Html.PagedListPager(Model, Page => Url.Action("OfferList", new { Page }), PagedListRenderOptions.ClassicPlusFirstAndLast)
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </section>
</section>
