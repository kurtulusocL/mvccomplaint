@model Complain.Entities.Entities.Product
@{
    ViewBag.Title = "Şikayet Bilgilerini Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title
                        </header>
                        <div class="panel-body">
                            <div class="form">
                                <form class="cmxform form-horizontal tasi-form" id="signupForm" method="post" action="">
                                    @Html.AntiForgeryToken()
                                    <hr />
                                    <h3><label class="label label-info">Kategori - Alt Kategori ve Ülke Seçimi</label></h3>
                                    <hr />
                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-2">Kategori Adı: *</label>
                                        <div class="col-lg-10">
                                            @Html.LabelFor(i => i.Category.Name, new { @class = "label-control col-md-3" })
                                            @Html.DropDownListFor(i => i.CategoryId, new SelectList(ViewBag.Categories, "Id", "Name", new { @class = "form-control" }))
                                            @Html.ValidationMessageFor(i => i.CategoryId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>                                    
                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-2">Ülke Adı: *</label>
                                        <div class="col-lg-10">
                                            @Html.LabelFor(i => i.Country.Name, new { @class = "label-control col-md-3" })
                                            @Html.DropDownListFor(i => i.CountryId, new SelectList(ViewBag.Countries, "Id", "Name", new { @class = "form-control" }))
                                            @Html.ValidationMessageFor(i => i.CountryId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <hr />
                                    <h3><label class="label label-info">Şikayet Konusu Ürün Bilgileri</label></h3>
                                    <hr />
                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-2">Başlık: *</label>
                                        <div class="col-lg-10">
                                            <input class=" form-control" id="firstname" name="Title" type="text" required />
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-2">Ürünün Firması: *</label>
                                        <div class="col-lg-10">
                                            <input class=" form-control" id="firstname" name="CompanyName" type="text" required />
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-2">Ürün Adı: *</label>
                                        <div class="col-lg-10">
                                            <input class=" form-control" id="firstname" name="ProductName" type="text" required />
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-2">Şikayetin Konusu: </label>
                                        <div class="col-lg-10">
                                            <input class=" form-control" id="firstname" name="Subject" type="text" />
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="ccomment" class="control-label col-lg-2">Şikayetin Detayı: *</label>
                                        <div class="col-lg-10">
                                            <textarea class="form-control " id="ccomment" name="Detail" required=""></textarea>
                                        </div>
                                    </div>
                                    <hr />
                                    <h3><label class="label label-info">Ürünün Detay Bilgileri</label></h3>
                                    <hr />
                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-2">Ürünün Markası: *</label>
                                        <div class="col-lg-10">
                                            <input class=" form-control" id="firstname" name="Brand" type="text" required />
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-2">Ürünün Kullanıldığı Süre (Ay): *</label>
                                        <div class="col-lg-10">
                                            <input class=" form-control" id="firstname" name="UsedTime" type="text" required />
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-2">Ürünün Alış Fiyatı: *</label>
                                        <div class="col-lg-10">
                                            <input class=" form-control" id="firstname" name="Price" type="text" required />
                                        </div>
                                    </div>
                                    <hr />
                                    <h3><label class="label label-info">Şikayet Sahibinin Bilgileri</label></h3>
                                    <hr />
                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-2">Adınız-Soyadınız: *</label>
                                        <div class="col-lg-10">
                                            <input class=" form-control" id="firstname" name="NameSurname" type="text" required />
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-2">Mail Adresiniz: *</label>
                                        <div class="col-lg-10">
                                            <input class=" form-control" id="firstname" name="MailAddress" type="email" required />
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-2">Yaşadığınız Eyalet / Bölge: *</label>
                                        <div class="col-lg-10">
                                            <input class=" form-control" id="firstname" name="Province" type="text" required />
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-2">Telefon Numaranız: *</label>
                                        <div class="col-lg-10">
                                            <input class=" form-control" id="firstname" name="PhoneNumber" type="tel" required />
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-2">Cinsiyetiniz: *</label>
                                        <div class="col-lg-10">
                                            <input class=" form-control" id="firstname" name="Gender" type="text" required />
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-2">Doğum Tarihiniz: *</label>
                                        <div class="col-lg-10">
                                            <input class=" form-control" id="firstname" name="Birthdate" type="datetime" required />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-offset-2 col-lg-10">
                                            <button class="btn btn-success" type="submit">Değişiklikleri Kaydet ve Resimi Güncellemek İçin Devam Et</button>
                                            <a href="~/Product/yonas"><button class="btn btn-danger" type="button">İptal Et</button></a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>
