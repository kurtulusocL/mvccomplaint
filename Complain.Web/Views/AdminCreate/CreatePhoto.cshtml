@model Complain.Entities.Entities.Picture
@{
    ViewBag.Title = "Şikatet İçin Resim Ekleyin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title
                        </header>
                        <div class="panel-body">
                            <div class="form">
                                <form class="cmxform form-horizontal tasi-form" id="signupForm" method="post" enctype="multipart/form-data" action="">
                                    @Html.AntiForgeryToken()
                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-2">Başlık: *</label>
                                        <div class="col-lg-10">
                                            <input class=" form-control" id="firstname" name="Name" type="text" required />
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="username" class="control-label col-lg-2">Resimleri Yükleyin: *</label>
                                        <div class="col-lg-10">
                                            <input type="file" name="image" class="form-control" id="username" multiple="true" required />
                                        </div>
                                    </div>
                                    <hr />
                                    <div class="form-group">
                                        <div class="col-lg-offset-2 col-lg-10">
                                            <button class="btn btn-success" type="submit">Resimleri Ekle ve Şikayeti Yayınla</button>
                                            <a href="~/Product/yonas"><button class="btn btn-danger" type="button">İptal Et</button></a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>