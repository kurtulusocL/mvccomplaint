                                    <li><a href="~/Account/Register">Yeni Admin Kaydı</a></li>
                                    <li><a href="~/Account/RegisterAsistant">Asistan Admin Kaydı</a></li>
                                    <li><a href="~/Account/RegisterHelper">Helper Kaydı</a></li>                                    
                                </ul>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </aside>
        @RenderBody()
        <footer class="site-footer">
            <div class="text-center">
                @DateTime.Now.Year &copy; kurtulusocaL.
                <a href="#" class="go-top">
                    <i class="icon-angle-up"></i>
                </a>
            </div>
        </footer>
