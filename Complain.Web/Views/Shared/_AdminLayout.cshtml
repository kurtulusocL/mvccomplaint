    <section id="container">
        <header class="header white-bg">
            <div class="sidebar-toggle-box">
                <div data-original-title="Toggle Navigation" data-placement="right" class="icon-reorder tooltips"></div>
            </div>
            <a href="~/Admin/Index" class="logo">ocL<span> admin</span></a>
            <div class="nav notify-row" id="top_menu"></div>
            <div class="top-nav ">
                <ul class="nav pull-right top-menu">
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <img alt="admin" src="~/img/icon.png">
                            <span class="username">@Session["Kullanıcı"]</span>
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu extended logout">
                            <li><a href="~/Account/Login"><i class="icon-suitcase"></i> Oturumu Kapat</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </header>
        <aside>
            <div id="sidebar" class="nav-collapse ">
                <ul class="sidebar-menu" id="nav-accordion">
                    <li>
                        <a class="active" href="~/About/yonas">
                            <i class="icon-dashboard"></i>
                            <span>Hakkımızda</span>
                        </a>
                    </li>
                    <li>
                        <a href="~/SocialMedia/yonas">
                            <i class="icon-envelope"></i>
                            <span>Sosyal Medya </span>
                        </a>
                    </li>
                    <li>
                        <a href="~/Slider/yonas">
                            <i class="icon-envelope"></i>
                            <span>Slider Resimleri </span>
                        </a>
                    </li>
                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="icon-laptop"></i>
                            <span>Reklamlar</span>
                        </a>
                        <ul class="sub">
                            <li><a href="~/Ads/yonas">Reklam</a></li>
                            <li><a href="~/VideoAds/yonas">Video Reklam</a></li>
                        </ul>
                    </li>
                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="icon-shopping-cart"></i>
                            <span>Şikayetler</span>
                        </a>
                        <ul class="sub">
                            <li><a href="~/Product/yonas">Gelen Şikayetler</a></li>
                        </ul>
                    </li>
                    <li>
                        <a class="active" href="~/OfferCompany/yonas">
                            <i class="icon-dashboard"></i>
                            <span>Firma Öner</span>
                        </a>
                    </li>
                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="icon-book"></i>
                            <span>Kategori ve Ülkeler</span>
                        </a>
                        <ul class="sub">
                            <li><a href="~/Category/yonas">Kategori Ekle</a></li>
                            <li><a href="~/Country/yonas">Ülke Ekle</a></li>
                        </ul>
                    </li>
                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="icon-shopping-cart"></i>
                            <span>Onay İşlemleri</span>
                        </a>
                        <ul class="sub">
                            <li><a href="~/Comment/ConfirmList">Yorum Onay İşlemleri</a></li>
                            <li><a href="~/Product/ConfirmList">Şikayet Onay İşlemleri</a></li>
                            <li><a href="~/OfferCompany/ConfirmList">Öneri Onay İşlemleri</a></li>
                        </ul>
                    </li>
                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="icon-tasks"></i>
                            <span>Gelenler</span>
                        </a>
                        <ul class="sub">
                            <li><a href="~/Comment/yonas">Yorumlar</a></li>
                            <li><a href="~/Career/yonas">Özgeçmişler</a></li>
                            <li><a href="~/Contact/yonas">İletişim</a></li>
                        </ul>
                    </li>
                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="icon-sitemap"></i>
                            <span>Şikayet Ekleme Bölgesi</span>
                        </a>
                        <ul class="sub">
                            <li><a href="~/AdminCreate/ComplainList">Şikayet Ekle</a></li>
                            <li><a href="~/AdminCreate/PhotoList">Eklenen Resimler</a></li>
                            <li><a href="~/AdminCreate/OfferList">Öneride Bulun</a></li>
                        </ul>
                    </li>
                    <li class="sub-menu">
                        <a href="javascript:;">
