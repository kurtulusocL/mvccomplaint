@model Complain.Entities.Entities.Contact
@{
    Layout = null;
}

<form action="#" method="post">
    @using (Html.BeginForm("_CreateContact", "Contact", FormMethod.Post))
    {
        @Html.AntiForgeryToken()


        <div class="row">
            <div class="col-md-6 form-group">
                <label for="name">Adınız-Soyadınız</label>
                <input type="text" id="name" name="NameSurname" placeholder="en az 8 karakter" class="form-control py-2" required>
            </div>
            <div class="col-md-6 form-group">
                <label for="email">Mail Adresiniz</label>
                <input type="email" id="email" name="MailAddress" placeholder="geçerli bir mail adresi" class="form-control py-2" required>
            </div>
        </div>
        <div class="row">
            <div class="col-md-10 form-group">
                <label for="phone">Konu</label>
                <input type="text" id="phone" name="Subject" placeholder="en az 20 karakter" class="form-control py-2" required>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 form-group">
                <label for="message">Mesajınız</label>
                <textarea name="Text" id="message" placeholder="en az 50 karakter" class="form-control py-2" cols="30" rows="8" required></textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 form-group">
                <input type="submit" value="Mesajı Gönder" class="btn btn-primary">
            </div>
        </div>
    }
</form>