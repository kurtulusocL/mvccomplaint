@using PagedList
@using PagedList.Mvc
@model IPagedList<Complain.Entities.Entities.Product>
@{
    ViewBag.Title = "Şikayet Edilen Ürünler - Firmalar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="site-hero site-sm-hero overlay" data-stellar-background-ratio="0.5">
    <img src="~/img/comp.jpg" style="max-height:550px;max-width:720px;min-height:550px;min-width:720px" />
</section>
<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-lg-8 order-md-2">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-12 col-lg-6 mb-5">
                            <div class="block-19">
                                <figure>
                                    @Html.Action("ComplainPhotoInCategory", "Home", new { id = item.Id })
                                </figure>
                                <div class="text">
                                    <h2 class="heading"><a href="~/Product/Detail/@item.Id">@item.CompanyName</a></h2>
                                    <p class="mb-4">@item.Subject</p>
                                    <div class="meta d-flex align-items-center">
                                        <div class="number">
                                            <span>@item.CreatedTime.ToShortDateString()</span>
                                        </div>
                                        <div class="price text-right"><a href="~/Product/Detail/@item.Id"><span>Devamını Oku</span></a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="row mb-5">
                    <div class="col-md-12 text-center">
                        <div class="block-27">
                            @Html.PagedListPager(Model, Page => Url.Action("ComplainCategory", new { Page }), PagedListRenderOptions.ClassicPlusFirstAndLast)
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 order-md-1">
                <div class="block-24 mb-5">
                    <h3 class="heading">Kategoriler</h3>
                    <ul>
                        @Html.Action("GetCategoryForComplain", "Home")
                    </ul>
                </div>
                <div class="block-25 mb-5">
                    <div class="heading">Biraz Reklam</div>
                    <ul>
                        @Html.Action("AdsForComplainCategory", "Home")
                    </ul>
                </div>
                <div class="block-24 mb-5">
                    <h3 class="heading">Şikayet Kategorileri</h3>
                    <ul>
                        @Html.Action("GetComplainCategory", "Home")
                    </ul>
                </div>
                <div class="block-26">
                    <h3 class="heading">Ülkeler</h3>
                    <ul>
                        @Html.Action("GetCategoryForOffer", "Home")
                    </ul>
                </div>
                <div class="block-26">
                    <h3 class="heading">En Son Şikayetçiler</h3>
                    <ul>
                        @Html.Action("LastComplainPeople","Home")
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="py-5 block-22">
    <div class="container">
        @Html.Action("VideoAdsForComplain","Home")
    </div>
</div>
