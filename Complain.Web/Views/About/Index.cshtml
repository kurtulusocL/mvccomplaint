@model IEnumerable<Complain.Entities.Entities.About>
@{
    ViewBag.Title = "Biz Kimiz ?";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="site-hero site-sm-hero overlay" data-stellar-background-ratio="0.5">
    <img src="~/img/comp.jpg" style="max-height:550px;max-width:720px;min-height:550px;min-width:720px" />
    <div class="container">
        <div class="row align-items-center justify-content-center site-hero-sm-inner">
            <div class="col-md-7 text-center">
                <div class="mb-5 element-animate">
                    <h1 class="mb-2">@ViewBag.Title</h1>
                    <p class="bcrumb"><a href="~/Home/Index">Anasayfa</a> <span class="sep ion-android-arrow-dropright px-2"></span>  <span class="current">Hakkımızda</span></p>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="site-section element-animate">
    <div class="container">
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="col-md-6 order-md-2">
                    <div class="block-16">
                        <figure>
                            <img src="~/img/@item.Photo" style="max-width:430px;max-height:320px;min-height:320px;min-width:430px" alt="@item.Title" class="img-fluid">
                        </figure>
                    </div>
                </div>
                <div class="col-md-6 order-md-1">
                    <div class="block-15">
                        <div class="heading">
                            <h2>@item.Title</h2>
                        </div>
                        <div class="text mb-5">
                            <p>@item.Subtitle</p>                            
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
<section class="site-section pt-3 element-animate">
    <div class="container">
        <div class="row justify-content-center mb-5 element-animate">
            <div class="col-md-7 text-center section-heading">
                <h2 class="text-primary heading">Önerilen Firmalar</h2>
                <p>En çok önerilen firmalar</p>
            </div>
        </div>
        <div class="row">
            @Html.Action("OfferedCompany","Home")           
        </div>
    </div>
</section>
<div class="container site-section element-animate">
    <div class="row justify-content-center mb-5 element-animate">
        <div class="col-md-7 text-center section-heading">
            <h2 class="text-primary heading">Neden Biz ?</h2>
            <p>Firmalar ya da kamu kurumları ile ilgili ya da bu kuruluşların ürünleri ile ilgili tüm şikayetleri burada bulabilirsiniz</p>
        </div>
    </div>
    @Html.Action("AboutDetail","Home")    
</div>
