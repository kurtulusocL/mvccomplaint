@model Complain.Entities.Entities.About
@{
    ViewBag.Title = "Yeni Hakkımızda Bilgileri Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title
                        </header>
                        <div class="panel-body">
                            <div class="form">
                                <form class="cmxform form-horizontal tasi-form" id="signupForm" method="post" enctype="multipart/form-data" action="">
                                    @Html.AntiForgeryToken()
                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-2">Başlık: *</label>
                                        <div class="col-lg-10">
                                            <input class=" form-control" id="firstname" name="Title" type="text" required />
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="password" class="control-label col-lg-2">Altbaşlık: *</label>
                                        <div class="col-lg-10">
                                            <input class="form-control " id="password" name="Subtitle" type="text" required />
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="ccomment" class="control-label col-lg-2">Hakkkımızda Metini: *</label>
                                        <div class="col-lg-10">
                                            <textarea class="form-control " id="ccomment" name="Text" required=""></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="ccomment" class="control-label col-lg-2">Detay: *</label>
                                        <div class="col-lg-10">
                                            <textarea class="form-control " id="ccomment" name="Detail" required=""></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="password" class="control-label col-lg-2">İkincil Detay: </label>
                                        <div class="col-lg-10">
                                            <input class="form-control " id="password" name="Subdetail" type="text" />
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="username" class="control-label col-lg-2">Resim Yükleyin: *</label>
                                        <div class="col-lg-10">
                                            <input class="form-control " id="username" name="image" type="file" required />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-offset-2 col-lg-10">
                                            <button class="btn btn-danger" type="submit">Bilgileri Ekle</button>
                                            <a href="~/About/yonas"><button class="btn btn-default" type="button">İptal Et</button></a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>