@model Complain.Entities.Entities.About
@{
    ViewBag.Title = "Hakkımızda Detay Bilgileri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title  || <a href="~/About/yonas" class="btn btn-primary">Hakkımızda Admin Sayfasına Dön</a> || <a href="~/About/Delete/@Model.Id" class="btn btn-danger">Hakkımızda Bilgilerini Sil</a>
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th><i class="icon-bullhorn"></i>İkincil Detay</th>
                                    <th class="hidden-phone"><i class="icon-question-sign"></i>Detay</th>
                                    <th><i class="icon-bookmark"></i>Hakkımızda Metni </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.Subdetail</td>
                                    <td>@Model.Detail</td>
                                    <td>@Model.Text</td>
                                </tr>
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>